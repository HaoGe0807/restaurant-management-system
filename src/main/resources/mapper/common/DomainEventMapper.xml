<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.restaurant.management.common.infrastructure.event.DomainEventMapper">
    
    <!-- 查询待发布的事件 -->
    <select id="findPendingEvents" resultType="com.restaurant.management.common.infrastructure.event.DomainEventEntity">
        SELECT * FROM domain_events
        WHERE status = 'PENDING'
        ORDER BY create_time ASC
        LIMIT #{limit}
    </select>
    
</mapper>

